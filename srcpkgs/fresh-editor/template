do_install() {
    vextract fresh-editor*
    vmkdir /usr/share/doc/fresh-editor
    vmkdir /usr/share/fresh-editor
    vmkdir /usr/bin
    vmkdir /usr/share/licenses/$pkgname/
    vcopy fresh /usr/bin/
    vinstall README.md 644 /usr/share/doc/fresh-editor/README.md
    vlicense LICENSE 644 /usr/share/licenses/fresh-editor/LICENSE
    vcopy plugins/'*' /usr/share/fresh-editor/
}

