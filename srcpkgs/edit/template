do_build() {
	export RUSTC_BOOTSTRAP=1
	cargo build --release
}

do_install() {
	vmkdir /usr/bin
	vmkdir /usr/share/applications
	vcopy target/release/edit /usr/bin/
	vcopy ${FILESDIR}/edit.desktop /usr/share/applications/
}
