pkgname=wmd77
version=0.3.1
revision=2
#archs="i686 x86_64"
#build_wrksrc=
build_style=cargo
#configure_args=""
#make_build_args=""
#make_install_args=""
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
hostmakedepends="pkg-config libXft-devel libX11-devel"
#makedepends=""
depends="dmenu libX11 libXft st"
short_desc="wmd77 is a Penrose Lib Tiling Window Manager"
maintainer="Daniel Azevedo <daniazevedo77@posteo.net>"
