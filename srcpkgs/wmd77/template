distfiles=""https://github.com/dani-77/${pkgname}/archive/refs/tags/${version}.tar.gz
checksum=46bf3f1f247677ac6c5aaa55c79816b333b90714b622a90a2c55ef1482552284
repository=d77

do_build() {
	cargo build --release
}

do_install() {
	sed -i '3i conky -c ~/.conkyrc1 &' etc/xdg/wmd77/startup.sh
	vmkdir /usr/bin
	vmkdir /usr/share/xsessions
	vmkdir /etc/xdg/wmd77
	vcopy target/release/wmd77 /usr/bin/
	vcopy wmd77.desktop /usr/share/xsessions/
	vcopy etc/xdg/wmd77/'*' /etc/xdg/wmd77/
}
