do_install() {
	vextract warp*.deb
	vmkdir /usr/bin
	vcopy opt/warpdotdev/warp-terminal/warp /usr/bin/warp-terminal
	rm -rf opt/
	rm warp*.deb
	vcopy '*' /
}

post_install() {
	vcopy ${FILESDIR}/dev.warp.Warp.desktop /usr/share/applications/
}
